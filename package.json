{
  "name": "@scalable-labs/sentinel",
  "version": "0.2.0",
  "description": "Frontend error monitoring and tracking client with local storage, Microsoft Teams integration, and visual error viewer",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./legacy": {
      "import": "./dist/legacy/sentinel.cjs.js",
      "require": "./dist/legacy/sentinel.cjs.js",
      "types": "./dist/legacy/sentinel.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md",
    "LEGACY.md"
  ],
  "scripts": {
    "build": "npm run build:modern && npm run build:legacy",
    "build:modern": "tsc",
    "build:legacy": "rollup -c",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "lefthook install"
  },
  "keywords": [
    "sentinel",
    "error-monitoring",
    "error-tracking",
    "frontend",
    "observability",
    "scalable",
    "monitoring",
    "analytics",
    "fetch",
    "axios",
    "teams",
    "microsoft-teams",
    "error-reporting",
    "browser",
    "indexeddb"
  ],
  "author": "Scalable Labs",
  "license": "MIT",
  "homepage": "https://github.com/scalabledk/sentineljs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scalabledk/sentineljs.git"
  },
  "bugs": {
    "url": "https://github.com/scalabledk/sentineljs/issues"
  },
  "devDependencies": {
    "@evilmartians/lefthook": "^1.13.6",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.2",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "core-js-pure": "^3.45.1",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.0.0",
    "prettier": "^3.0.0",
    "rollup": "^4.52.4",
    "rollup-plugin-dts": "^6.2.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
